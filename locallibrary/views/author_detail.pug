extends layout 

block content 
    h1 Author: #{author.name}
       
    p  #{author.date_of_birth_yyyy_mm_dd}~#{author.date_of_death_yyyy_mm_dd}

    div(style='margin-left: 20px; margin-top:20px')
        h4 Books 

        dl 
            each val in author_books
                dt
                    a(href=val.url) #{val.title}
                dd #{val.summary}
            else 
                p This author has no books. 
    hr
    p
        a(href=`/catalog/author/${author._id}/delete`) Delete author
    p 
        a(href= author.url + '/update') Update Author
                